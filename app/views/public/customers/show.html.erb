<div class="container">

  <div class="col-10 mx-auto">
  
    <div class="row mb-4">
  
      <div class="col-md-12">
  
        <h3 class="mt-3 mb-4">マイページ</h3>
        
        <div class="row mb-3">
          <div class="col-md-3">
            <h5>登録情報</h5>
          </div>
          <div class="col-md-3">
            <%= link_to "編集する", edit_customers_path %>
          </div>
        </div>
        
        <table>
          <tr>
            <th>氏名</th>
            <td><%= @customer.last_name + @customer.first_name %></td>
          </tr>
          <tr>
            <th>カナ</th>
            <td><%= @customer.last_name_kana + @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @customer.zip_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </table>
  
      </div>
    
    </div>

    <div class="row mb-3">
      <div class="col-md-3">
        <h5>配送先</h5>
      </div>
      <div class="col-md-3">
        <%= link_to "一覧を見る", addresses_path %>
      </div>
    </div>
    
    <div class="row mb-4">
      <div class="col-md-3">
        <h5>注文履歴</h5>
      </div>
      <div class="col-md-3">
        <%= link_to "一覧を見る", orders_path %>
      </div>
    </div>
    
  </div>
  
</div>