<div class="container">
  <h2>会員情報編集</h2>
  <%= form_with model: @customer, url: customers_path, local:true do |f| %>
    <div class="form-group">
      <%= f.label :first_name, "氏名" %>
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
    </div>

    <div class="form-group">
      <%= f.label :first_name, "フリガナ" %>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
    </div>

    <div class="form_group">
      <%= f.label :zip_code, "郵便番号" %>
        <%= f.text_field :zip_code %>
    </div>

    <div class="form_group">
      <%= f.label :address, "住所" %>
        <%= f.text_area :address %>
    </div>

    <div class="form-group">
      <%= f.label :phone_number, "電話番号" %>
        <%= f.text_field :phone_number %>
    </div>

    <div class="form_group">
      <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email %>
    </div>

    <div class="form_group">
      <%= f.submit "編集内容を保存" %>
    </div>

    <div>
      <%= link_to "退会する", confirm_customers_path %>
    </div>

  <% end %>

</div>