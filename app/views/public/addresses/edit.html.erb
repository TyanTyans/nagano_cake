<div class="container">

  <div class="row mb-4">

    <div class="col-12">

      <h4 class="mt-4 mb-5 offset-1 col-2">配送先編集</h4>

      <%= form_with model: @address, local:true do |f| %>

        <div class="form-group row">
          <%= f.label :zip_code, "郵便番号(ハイフンなし)", class: "col-form-label col-3" %>
          <div class="col-3">
            <%= f.text_field :zip_code, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :address, "住所", class: "col-form-label col-3" %>
          <div class="col-6">
            <%= f.text_field :address, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :name, "宛名", class: "col-form-label col-3" %>
          <div class="col-3">
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="col-3 offset-3">
            <%= f.submit "変更内容を保存する", class: "btn btn-success" %>
          </div>
        </div>

      <% end %>

    </div>

  </div>

</div>