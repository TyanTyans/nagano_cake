<div class="container">

  <h4>配送先編集</h4>

  <%= form_with model: @address, local:true do |f| %>

    <div class="form_group">
      <%= f.label :zip_code, "郵便番号(ハイフンなし)" %>
        <%= f.text_field :zip_code %>
    </div>

    <div class="form_group">
      <%= f.label :address, "住所" %>
        <%= f.text_area :address %>
    </div>

    <div class="form_group">
      <%= f.label :name, "宛名" %>
        <%= f.text_field :name %>
    </div>

    <div class="form-group">
      <%= f.submit "変更内容を保存する" %>
    </div>

  <% end %>

</div>