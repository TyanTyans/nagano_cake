<div class="container">

  <h4 class="my-4">配送先登録/一覧</h4>

  <%= form_with model: @address, local:true do |f| %>

    <div class="form_group row mb-3">
      <%= f.label :zip_code, "郵便番号(ハイフンなし)", class: "col-form-label col-3" %>
      <div class="col-3">
        <%= f.text_field :zip_code, class: "form-control", placeholder: "00000000" %>
      </div>
    </div>

    <div class="form_group row mb-3">
      <%= f.label :address, "住所", class: "col-form-label col-3" %>
      <div class="col-7">
        <%= f.text_field :address, class: "form-control", placeholder: "東京都渋谷区代々木神園町0-0" %>
      </div>
    </div>

    <div class="form_group row mb-3">
      <%= f.label :name, "宛名", class: "col-form-label col-3" %>
      <div class="col-3">
        <%= f.text_field :name, class: "form-control", placeholder: "令和道子" %>
      </div>
      <div class="col-2 offset-2 text-right">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    </div>

  <% end %>

  <div class="row my-5">
    <div class="col-10">
      <table class="table table-bordered">

        <thead class="thead-light">
          <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th class="w-25"></th>
          </tr>
        </thead>

        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.zip_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %>
                <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  </div>


</div>