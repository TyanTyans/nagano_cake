<div class="container">

  <h4 class="my-4">配送先登録/一覧</h4>

  <%= form_with model: @address, local:true do |f| %>

    <div class="form_group row mb-3">
      <%= f.label :zip_code, "郵便番号(ハイフンなし)", class: "col-form-label col-3" %>
      <div class="col-3">
        <%= f.text_field :zip_code, class: "form-control" %>
      </div>
    </div>

    <div class="form_group row mb-3">
      <%= f.label :address, "住所", class: "col-form-label col-3" %>
      <div class="col-7">
        <%= f.text_field :address, class: "form-control" %>
      </div>
    </div>

    <div class="form_group row mb-3">
      <%= f.label :name, "宛名", class: "col-form-label col-3" %>
      <div class="col-3">
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="col-2 offset-4">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    </div>

  <% end %>

  <table>

    <thead>
      <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
      </tr>
    </thead>

    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.zip_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_address_path(address.id) %>
            <%= link_to "削除する", address_path(address.id), method: :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>

  </table>

</div>