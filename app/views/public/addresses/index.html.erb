<div class="container">

  <h4>配送先登録/一覧</h4>

  <%= form_with model: @address, local:true do |f| %>

    <div class="form_group">
      <%= f.label :zip_code, "郵便番号(ハイフンなし)" %>
        <%= f.text_field :zip_code %>
    </div>

    <div class="form_group">
      <%= f.label :address, "住所" %>
        <%= f.text_area :address %>
    </div>

    <div class="form_group">
      <%= f.label :name, "宛名" %>
        <%= f.text_field :name %>
    </div>

    <div class="form-group">
      <%= f.submit "新規登録" %>
    </div>

  <% end %>

  <table>

    <thead>
      <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
      </tr>
    </thead>

    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.zip_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_address_path(address.id) %>
            <%= link_to "削除する", address_path(address.id), method: :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>

  </table>

</div>