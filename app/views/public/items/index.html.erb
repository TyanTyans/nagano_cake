<h1>商品一覧</h1>
<div>
  <% @items.each do |item| %>
    <p>
      <!--商品画像とshowページへのリンク-->
      <%= link_to item_path(item.id) do %>
        <%= attachment_image_tag item, :image, :fill, 100, 100, fallback: "no_image.jpg", size: "100x100" %>
      <% end %>
    </p>
    <p><%= item.name %></p>
    <p><%= item.price %></p>
  <% end %>
</div>