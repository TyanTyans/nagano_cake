<div class="container">
  <h2 class="page_title col-md-5 my-3 text-center">
    商品一覧（全<%= @items.total_count %>件）
  </h2>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-3 mx-auto">
        <p>
          <!--商品画像とshowページへのリンク-->
          <%= link_to item_path(item.id) do %>
            <%= attachment_image_tag item, :image, :fill, 200, 200, fallback: "no_image.jpg", size: "200x200", class:"border rounded" %>
          <% end %>
        </p>
        <h5><%= item.name %></h5>
        <p>
          <% if item.is_active == true %>
            ￥<%= item.price.to_s(:delimited) %>
          <% elsif item.is_active == false %>
            売り切れ中
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
  <div class="pagination"><%= paginate @items, theme: 'twitter-bootstrap-4' %></div>
</div>