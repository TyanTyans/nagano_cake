<h1>商品一覧</h1>
<div>
  <% @items.each do |item| %>
    <p>
      <!--商品画像とshowページへのリンク-->
      <%= link_to item_path(item.id) do %>
        <%= attachment_image_tag item, :image, :fill, 100, 100, fallback: "no_image.jpg", size: "100x100" %>
      <% end %>
    </p>
    <p><%= item.name %></p>
    <p>
      <%= item.price %>
      円
    </p>
    <p>
      <% if item.is_active == true %>
        販売中
      <% elsif item.is_active == false %>
        販売停止中
      <% end %>
    </p>
  <% end %>
</div>