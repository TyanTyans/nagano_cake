<div class="container">
  <h1 class="col-md-3">商品一覧</h1>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-3 mx-auto">
        <p>
          <!--商品画像とshowページへのリンク-->
          <%= link_to item_path(item.id) do %>
            <%= attachment_image_tag item, :image, :fill, 200, 200, fallback: "no_image.jpg", size: "200x200", class:"border rounded" %>
          <% end %>
        </p>
        <p><%= item.name %></p>
        <p>
          <% if item.is_active == true %>
            <%= item.price %>円
          <% elsif item.is_active == false %>
            売り切れ中
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
</div>
<div class="pagination"><%= paginate @items %></div>