<div class="container my-5">
  <div class="row">
    <h3 class="order-text">
	  注文情報入力
	</h3>
  </div>

  <div class="row">
	<div class="col-md-6 mx-auto">
      <%= form_with model: @order, url: orders_thanks_path, method: :POST, local: true do |f| %>
	    <%= f.hidden_field :customer_id, :value => current_customer.id %>

		<h2>支払い方法</h2>

			<%= f.radio_button :pay_method, :クレジットカード, checked: true %>
			<span>クレジットカード</span>
			<%= f.radio_button :pay_method, :銀行振込 %>
			<span>銀行振込</span>

		<h2>お届け先</h2>

		<div class="form-check">
			<input class="form_check_input" type="radio" name="order_address" id="customer_address" value="option1" checked>
			<label class="form_check_label" for="customer_address">
				ご自身の住所
			</label></br>
			〒<%= current_customer.zip_code %>　<%= current_customer.address %></br>
			<%= current_customer.last_name %><%= current_customer.first_name %>
			<%= f.hidden_field :zip_code, :value => current_customer.zip_code %>
			<%= f.hidden_field :address, :value => current_customer.address %>
			<%= f.hidden_field :name, :value => [current_customer.last_name, current_customer.first_name] %>
			<%# f.hidden_field :last_name, :value => current_customer.last_name %>
			<%# f.hidden_field :first_name, :value => current_customer.first_name %>
		</div>

		<div class="form-check">
			<input class="form_check_input" type="radio" name="order_address" id="add_address" value="option2" >
			<label class="form_check_label" for="add_address">
				登録済住所から選択
			</label></br>
	    	<%= f.collection_select :select_address, @addresses, :id, :address_select %>
		</div>

		<div class="form-check">
			<input class="form_check_input" type="radio" name="order_address" id="new_address" value="option3" >
			<label class="form_check_label" for="new_address">
				新しいお届け先
			</label></br>
				<%= f.label :zip_code, "郵便番号(ハイフンなし)" %>
				<%= f.text_field :zip_code, placeholder: "0000000" %></br>
				<%= f.label :address, "住所" %>
				<%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %></br>
				<%= f.label :name, "宛名" %>
				<%= f.text_field :name, placeholder: "令和道子" %></br>
		</div>

		<%= f.submit "確認画面へ進む", class: "btn btn-primary", method: :POST %>
	  <% end %>
	</div>
  </div>
</div>