<h1>注文情報入力</h1>

<h2>支払い方法</h2>
<%= form_with model: @order, local: true do |f| %>
	<%= f.radio_button :pay_method, :yes, checked: true %>
	<span>クレジットカード</span>
	<%= f.radio_button :pay_method, :no %>
	<span>銀行振込</span>
<% end %>

<h2>お届け先</h2>
<div class="form-check">
	<input class="form_check_input" type="radio" name="order_address" id="customer_address" value="option1" checked>
	<label class="form_check_label" for="customer_address">
		ご自身の住所
	</label></br>
</div>

<div class="form-check">
	<input class="form_check_input" type="radio" name="order_address" id="add_address" value="option2" >
	<label class="form_check_label" for="add_address">
		登録済住所から選択
	</label></br>
</div>

<div class="form-check">
	<input class="form_check_input" type="radio" name="order_address" id="new_address" value="option3" >
	<label class="form_check_label" for="new_address">
		新しいお届け先
	</label></br>
	<%= form_with model: @order, local: true do |f| %>
		<%= f.label :zip_code, "郵便番号(ハイフンなし)" %>
		<%= f.text_field :zip_code, placeholder: "0000000" %></br>
		<%= f.label :address, "住所" %>
		<%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %></br>
		<%= f.label :name, "宛名" %>
		<%= f.text_field :name, placeholder: "令和道子" %></br>
		<%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
	<% end %>
</div>