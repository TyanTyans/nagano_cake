<div class="search-form">
  <% if admin_signed_in? %>
    <%= form_with url: search_path, method: :get, local: true do |f| %>
      <%= f.text_field :content %>
      <%= f.select :model, options_for_select({"商品検索" => "item" , "会員検索" => "customer" }) %>
      <%= f.submit '検索' %>
    <% end %>
  <% else %>
    <%= form_with url: search_path, method: :get, local: true do |f| %>
      <%= f.text_field :content %>
      <%= f.select :model, options_for_select({"商品検索" => "item"}) %>
      <%= f.submit '検索' %>
    <% end %>
  <% end %>
</div>
