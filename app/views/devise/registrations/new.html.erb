<div class="container">
  <h2>新規会員登録</h2>

  <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>

  <div class="form_group">
    <%= f.label "名前" %>
      <%= f.text_field :last_name, autofocus: true %>
      <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="form_group">
    <%= f.label :last_name_kana, "フリガナ" %>
      <%= f.text_field :last_name_kana, autofocus: true %>
      <%= f.text_field :first_name_kana, autofocus: true %>
  </div>

  <div class="form_group">
    <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form_group">
    <%= f.label :zip_code, "郵便番号(ハイフンなし)" %>
      <%= f.text_field :zip_code, autofocus: true %>
  </div>

  <div class="form_group">
    <%= f.label :address, "住所" %>
      <%= f.text_area :address, autofocus: true %>
  </div>

  <div class="form_group">
    <%= f.label :phone_number, "電話番号(ハイフンなし)" %>
      <%= f.text_field :phone_number, autofocus: true %>
  </div>

  <div class="form_group">
    <%= f.label :password, "パスワード(6文字以上)" %>
      <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="form_group">
    <%= f.label :password_confirmation, "パスワード(確認用)" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="form_group">
    <%= f.submit "新規登録" %>
  </div>

  <% end %>

  <h4>既に登録済みの方</h4>
  <p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
</div>