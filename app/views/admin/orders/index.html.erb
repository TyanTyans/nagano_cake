<div class="container my-5">

  <div class="row">
    <div class="offset-1 col-3 text-center">
      <h3 class="order-text">
        注文履歴一覧
      </h3>
    </div>
  </div>

  <div class="row mt-5">
    <table class="table table-striped table-hover">

      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td>
            <%= link_to order[:created_at].strftime("%Y-%m-%d %H:%M"), admins_order_path(order) %>
          </td>
          <td>
            <%= order.customer.last_name %>
            <%= order.customer.first_name %>
          </td>
          <td><%= order.ordered_items.sum(:quantity) %></td>
          <td><%= order.product_status %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>