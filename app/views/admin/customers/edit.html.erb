<div class="container">
  
  <h2>
    <%= @customer.last_name + @customer.first_name %>さんの会員情報編集
  </h2>
  
  <%= form_with model: @customer, url: admin_customer_path, local:true do |f| %>
    <div class="form-group">
      <%= f.label :id, "会員ID" %>
      <%= f.label :id @customer.id %>
    </div>
    <div class="form-group">
      <%= f.label :first_name, "氏名" %>
      <%= f.text_field :last_name %>
      <%= f.text_field :first_name %>
    </div>
    <div class="form-group">
      <%= f.label :first_name, "フリガナ" %>
      <%= f.text_field :last_name_kana %>
      <%= f.text_field :first_name_kana %>
    </div>
    <div class="form-group">
      <%= f.label :zip_code, "郵便番号" %>
      <%= f.text_field :zip_code %>
    </div>
    <div class="form-group">
      <%= f.label :address, "住所" %>
      <%= f.text_area :address %>
    </div>
    <div class="form-group">
      <%= f.label :phone_number, "電話番号" %>
      <%= f.text_field :phone_number %>
    </div>
    <div class="form-group">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email %>
    </div>
    <div class="form-group">
      <%= f.label :is_deleted, "会員ステータス" %>
    </div>
    <div class="form-group">
      <%= f.submit "変更を保存" %>
    </div>
  <% end %>
</div>