<div id="container">
  <div><%= attachment_image_tag @item, :image, :fill, 300, 300, fallback: "no_image.jpg", size: "300x300" %></div>
  <div>
    <p class="text"><%= @item.name %></p>
    <p class="light-text"><%= @item.body %></p>
    <p class="light-text">¥ <%= (@item.price.to_i * 1.1).floor %>（税込）</p>
  </div>
  <div class="text"><%= link_to "編集する", edit_admin_item_path(@item), class: "btn-sm btn-success" %></div>
</div>
