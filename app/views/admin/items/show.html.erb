<div id="container">
  <div><%= attachment_image_tag @item, :image, :fill, 400, 400, fallback: "no_image.jpg", size: "400x400" %></div>
  <div>
    <p><%= @item.name %></p>
    <p><%= @item.body %></p>
    <p>¥ <%= (@item.price.to_i * 1.1).floor %>（税込）</p>
  </div>
  <div><%= link_to "編集する", edit_admin_item_path(@item), class: "btn-sm btn-success" %></div>
</div>
