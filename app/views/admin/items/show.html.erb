<div class="container">
  <div class="row">
    <div class="mt-5 col-md-6">
      <%= attachment_image_tag @item, :image, :fill, 300, 300, fallback: "no_image.jpg", size: "300x300" %>
    </div>
    <div class="mt-5 col-md-6">
      <h3><%= @item.name %></h3>
      <p><%= @item.body %></p>
      <p>¥ <%= (@item.price.to_i * 1.1).floor %>（税込）</p>
      <%= link_to "編集する", edit_admin_item_path(@item), class: "btn-sm btn-success" %>
    </div>
  </div>
</div>
