<div class="container">
  <h3>ジャンル編集</h3>
  <%= form_with model: @type, url: admin_type_path, local: true do |f| %>
    <p>ジャンル名 
      <span><%= f.text_field :name %></span>
      <span class="ml-5"><%= f.submit '変更を保存', class: "glyphicon glyphicon-pencil btn btn-success" %></span>
    </p>
  <% end %>
</div>