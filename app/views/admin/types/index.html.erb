<div class="container my-5">
  <%= render "shared/flash_message" %>
  <div class="row">
    <h3 class="order-text">
      ジャンル一覧
    </h3>
    <div class="ml-md-5">
      <%= form_with model:@type, url: admin_types_path, local:true do |f| %>
        <label>ジャンル名</label>
        <%= f.text_field :name %>
        <%= f.submit '新規登録', class: "btn btn-success btn-sm" %>
      <% end %>
    </div>
  </div>
  
  <div class="row mt-5">
    <table class="table table-striped col-md-4 border">
      <thead>
        <th>ジャンル</th>
        <th></th>
      </thead>
      <tbody>
        <% @types.each do |type| %>
          <tr>
            <td><%= type.name %></td>
            <td><%= link_to "編集する", edit_admin_type_path(type.id), class: "btn btn-success" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="pagination"><%= paginate @types %></div>
  </div>
</div>